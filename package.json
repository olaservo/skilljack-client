{
  "name": "mcp-skilljack-client",
  "version": "0.2.0",
  "description": "A full-capability MCP client demonstrating all advanced protocol features",
  "type": "module",
  "main": ".vite/build/main.cjs",
  "types": "dist/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc && npm run build:chat",
    "build:chat": "vite build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:chat": "vite",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron:dev": "electron-forge start",
    "electron:build": "electron-forge make",
    "electron:package": "electron-forge package",
    "electron:publish": "electron-forge publish"
  },
  "config": {
    "forge": "./forge.config.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "client",
    "reference-implementation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@skilljack/mcp-server-manager": "workspace:*",
    "@ai-sdk/anthropic": "^3.0.9",
    "@ai-sdk/openai": "^3.0.0",
    "@anthropic-ai/sdk": "^0.71.0",
    "@modelcontextprotocol/ext-apps": "^0.4.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "ai": "^6.0.27",
    "dotenv": "^16.4.0",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-vite": "^7.11.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.4.0",
    "electron": "^39.2.7",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
